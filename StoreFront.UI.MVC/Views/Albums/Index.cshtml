@model IEnumerable<Storefront.DATA.EF.Album>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AlbumTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitsSold)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PublishDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlbumCover)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlbumStatus.AlbumStatusName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Artist)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre.GenreName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RecordLabel.RecordLabelName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AlbumTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnitsSold)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PublishDate)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.AlbumCover)*@
            <img src="~/Content/imgstore/albums/t_@item.AlbumCover" alt="Album cover" title="@item.AlbumTitle" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlbumStatus.AlbumStatusName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Artist.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre.GenreName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RecordLabel.RecordLabelName)
        </td>
        <td>
            <a href="@Url.Action("Edit", "Albums", new { id=item.AlbumID })">
                <i class="fa fa-pencil-square-o action-icons" aria-hidden="true"></i>
            </a>
            <a href="@Url.Action("Details", "Albums", new { id = item.AlbumID })">
                <i class="fa fa-info-circle action-icons" aria-hidden="true"></i>
            </a>
            <a href="@Url.Action("Delete", "Albums", new { id = item.AlbumID })">
                <i class="fa fa-trash-o action-icons" aria-hidden="true"></i>
            </a>
        </td>
    </tr>
}

</table>
