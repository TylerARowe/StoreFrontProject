@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewBag.Title - Storefront Project</title>

    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="~/_Archive/assets/favicon.ico" />

    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Bootstrap -->
    <link type="text/css" rel="stylesheet" href="~/Content/bootstrap.min.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Gemunu+Libre:wght@300&display=swap" rel="stylesheet">

    <!--jQuery DataTables-->
    <link href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.2.1/css/responsive.dataTables.min.css" rel="stylesheet" />

    @* ADDED jQueryUI CSS CDN - note: themenames are swappable.*@
    @*NOTE, Module 5 AJAX: find names at jqueryui.com/themeroller, gallyery tab (like excite-bike, south-street or sunny)*@
    @* AJAX - Step 1 - Add <link> for jQUery UI in the <head>, and add <scripts> for jQueryUI & jQuery AJAX at the bottom of layout *@
    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/south-street/jquery-ui.css">

    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/Content/styles.css" rel="stylesheet" />

    <!--Paged List CSS-->
    <link href="~/Content/PagedList.css" rel="stylesheet" />

    <!--Custom Styling-->
    <link href="~/Content/customstyle.css" rel="stylesheet" />

    @RenderSection("htmlHead", required: false)

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <!--Logo-->
    <!-- Navigation-->
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-right">
            <ul class="main-menu nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Shop</a>
                    <div class="dropdown-menu shop-dropdown">
                        <button id="albumbtn" class="btn btn-light btn-lg">@Html.ActionLink("Albums", "Index", "Albums")</button>
                        <button id="artistbtn" class="btn btn-light btn-lg">@Html.ActionLink("Artists", "ArtistsQS", "Filters")</button>
                        <button id="recordlblbtn" class="btn btn-light btn-lg">@Html.ActionLink("Labels", "Index", "RecordLabels")</button>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Account</a>
                    <div class="dropdown-menu account-dropdown">
                        @Html.Partial("_LoginPartial")
                    </div>
                </li>
            </ul>
        </nav>
    </div>

    <!-- Header-->
    <header class="bg-dark py-3">
        <div id="headerimgcontainer" class="container">
            <img src="~/Content/imgstore/deadbeatsheaderimg.jpg" />
            <div id="centeredtxt" class="centered">Welcome to Deadbeat Records</div>
        </div>
    </header>

    @RenderBody()

    <!-- Footer-->
    <footer class="py-5 bg-dark">
        <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Tyler Rowe @DateTime.Now.Year </p></div>
        @if (Request.IsAuthenticated)
        {
            using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm"}))
            {
                @Html.AntiForgeryToken()
                <div id="welcomemsg" class="container">
                    <ul>
                        <li>
                            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                        </li>
                    </ul>
                </div>
            }
        }
    </footer>

    <!-- preloader -->
    <div id='preloader'><div class='preloader'></div></div>

    <!-- jQuery Plugins -->
    <script type="text/javascript" src="~/Scripts/jquery.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/main.js"></script>

    <!--jQuery DataTables-->
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.1/js/dataTables.responsive.min.js"></script>

    <!--ADDEDjQuery UI CDN-->
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <!-- ADDED jQuery Ajax CDN-->
    <script src="https://cdn.jsdelivr.net/jquery.ajax.unobtrusive/3.2.4/jquery.unobtrusive-ajax.min.js"></script>

    @RenderSection("scripts", required: false)


</body>
</html>
